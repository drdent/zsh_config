#bash
alias ll='ls -la'
alias ..='cd ..'

alias open_ports='lsof -i -P | grep -i LISTEN'

#servers
alias apollo='ssh deploy@apollo'
alias bamboo='ssh bamboo@bamboo'
alias chili='ssh deploy@chili'
alias emil='ssh deploy@emil'
alias goya='ssh deploy@goya'
alias hindenburg='ssh deploy@hindenburg'
alias ivy='ssh ivy@ivy'
alias kursk='ssh deploy@kursk'
alias leona='ssh deploy@leona'
alias metula='ssh deploy@metula'
alias pamir='ssh deploy@pamir'
alias pluto='ssh deploy@pluto'
alias primus='ssh deploy@primus'
alias team2='ssh deploy@team2'
alias tirpitz='ssh deploy@tirpitz'
alias titanic='ssh deploy@titanic'

#git
alias gpr='git pull --rebase'
alias gs='git stash'
alias gsp='git stash pop'
alias grh='git reset --hard'
alias grc='git rebase --continue'
alias gp='git pull --rebase; git push'

#vim
alias v='mvim'
alias vi='mvim'
alias vim='mvim'

#Maven
alias mci='mvn clean install'
alias mct='mvn clean test'
alias mvn_hotdeploy='mvn clean package hotdeploy:hotdeploy'
alias mvn_install='mvn clean install -Dmaven.test.skip=true -U -Djarsigner.skip=true'

alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -run -e httpd . -p9090'

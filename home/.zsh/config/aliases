#bash
alias ll='ls -la'
alias ..='cd ..'

alias open_ports='lsof -i -P | grep -i LISTEN'

#servers
alias bamboo='ssh bamboo@bambooserver1.hh.blau.de'
alias ivy='ssh ivy@ivy'
alias team2='ssh deploy@team2.hh.blau.de'
alias team5='ssh deploy@team5.hh.blau.de'
alias team6='ssh deploy@team6'
alias team13='ssh deploy@team13.hh.blau.de'
alias tirpitz='ssh deploy@tirpitz.hh.blau.de'
alias ci25='ssh deploy@ci25'

#git
alias gpr='git pull'
alias gs='git stash'
alias gsp='git stash pop'
alias grh='git reset --hard'
alias grc='git rebase --continue'
alias gp='gpr; git push'

#vim
alias v='mvim'
alias vi='mvim'
alias vim='mvim'

#Maven
alias mci='mvn clean install'
alias mct='mvn clean test'
alias mvn_hotdeploy='mvn clean package hotdeploy:hotdeploy'
alias mvn_install='mvn clean install -Dmaven.test.skip=true -U -Djarsigner.skip=true'

alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -run -e httpd . -p9090'

#rspec
alias n='rspec --next-failure'

#rails
alias rc='bundle exec pry -r ./config/environment'

alias titanic='ssh deploy@titanic'

#rails tests
alias test_int='rake spec:integration'
alias testall='rake spec:integration'
alias test='rake spec'

#git
alias gpr='git pull --rebase'
alias gs='git stash'
alias gsp='git stash pop'
alias grh='git reset --hard'

alias ts='tig status'

#vim
alias v='mvim'
alias vi='mvim'
alias vim='mvim'

#Java
alias bcp='buildr clean package'
alias bch='buildr clean hotdeploy'

#Maven
alias mvn_test='mvn clean install'
alias mvn_install='mvn clean install -Dmaven.test.skip=true -U -Djarsigner.skip=true'

alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -run -e httpd . -p9090'

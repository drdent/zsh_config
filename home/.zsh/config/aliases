#bash
alias ll='ls -la'
alias ..='cd ..'
alias bat='bat --paging=never'

# Docker
alias dm='docker-machine'
alias dc='docker-compose -p dockercompose'
alias dce='dc exec'
alias dcu='dc up'
alias dcb='dc build'
alias dcr='dc restart'
alias dcl='dc logs'
alias dcps='dc ps | grep Up'
alias dps='docker ps -f status=running --format "{{.Names}}" | sed s/dockercompose_//g | sed s/_1//g | sort'

#git
alias gpr='rm -rf .git/refs/remotes/origin/Codejam && git pull && git_prune'
alias gs='git stash'
alias gsp='git stash pop'
alias grh='git reset --hard'
alias grc='git rebase --continue'
alias grs='git rebase --skip'
alias gra='git rebase --abort'

#Maven
alias mci='mvn clean install'
alias mct='mvn clean test'
alias mvn_hotdeploy='mvn clean package hotdeploy:hotdeploy'
alias mvn_install='mvn clean install -Dmaven.test.skip=true -U -Djarsigner.skip=true'

#rails
alias rc='bundle exec pry -r ./config/environment'

#rspec
alias n='rspec --next-failure'

#vim
alias v='mvim'
alias vi='mvim'
alias vim='mvim'

# misc
alias open_ports='lsof -i -P | grep -i LISTEN'

# google cloud
alias kex_console='kex bash -c "eval $(bundle exec ruby scripts/secret_manager_retrieve_credentials.rb) && bin/rails c"'
alias kdev="export KUBECONFIG=~/.kube/config.development"
alias kprod="export KUBECONFIG=~/.kube/config.production"
alias kstaging="export KUBECONFIG=~/.kube/config.staging"

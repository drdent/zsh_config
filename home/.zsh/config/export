export CLICOLOR=1
export LSCOLORS=cxfxexexDxexexDxDxcxcx
export LESS="-mR" #Line-numbers and ASCII-Colors in less
export EDITOR='mvim -f --nomru -c "au VimLeave * !open -a iTerm"'
export LC_ALL="en_US.UTF-8"
export DEBUG=1

# Show `time` output for any command that takes longer than 1 second of CPU time
export REPORTTIME=1

# Manpager with ascii-sequences
export MANPAGER=more

export PATH=/usr/local/bin:/usr/local/sbin:/usr/local/share/npm/bin/jshint:$PATH

# Docker
eval $(docker-machine env default)

# Homebrew
export HOMEBREW_INSTALL_BADGE="ðŸ› "

# autojump
export PATH=/usr/local/bin:$PATH
[[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh

#rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
if which rbenv > /dev/null; then eval "$(rbenv init - zsh)"; fi
